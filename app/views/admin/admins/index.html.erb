<% provide :title, t("general") %>
<% provide :page_header, t("general") %>
<div class="row">
  <div class="col-lg-3 col-md-6">
  <div class="panel panel-user">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
           <span class="glyphicon glyphicon-user icon_general_admin"></span>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @general[:user_today] %></div>
            <div><%= t "user_today" %></div>
          </div>
        </div>
      </div>
      <%= link_to admin_users_path do %>
        <div class="panel-footer">
          <span class="pull-left"><%= t "manage" %></span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-order">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <span class="glyphicon glyphicon-shopping-cart icon_general_admin"></span>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @general[:order_today] %></div>
            <div><%= t "order_today" %></div>
          </div>
        </div>
      </div>
      <%= link_to admin_orders_path do %>
        <div class="panel-footer">
          <span class="pull-left"><%= t "manage" %></span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-product">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <span class="glyphicon glyphicon-star-empty icon_general_admin"></span>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @general[:rate_today] %></div>
            <div><%= t "rate_today" %></div>
          </div>
        </div>
      </div>
      <%= link_to admin_rates_path do %>
        <div class="panel-footer">
          <span class="pull-left"><%= t "manage" %></span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-suggest">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <span class="glyphicon glyphicon-cloud-upload icon_general_admin"></span>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @general[:suggest_today] %></div>
            <div><%= t "suggest_today" %></div>
          </div>
        </div>
      </div>
      <%= link_to "#" do %>
        <div class="panel-footer">
          <span class="pull-left"><%= t "manage" %></span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        <% end %>
      </a>
    </div>
  </div>
</div>
<div><%= load_select %></div>
<%= javascript_include_tag "chart/chart" %>
<%= javascript_include_tag "chart/highcharts" %>
<%= javascript_include_tag "chart/exporting" %>
<div id="container"></div>
<div id="container1"></div>
