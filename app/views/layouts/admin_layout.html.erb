<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render "layouts/rails_default" %>
    <%= render "layouts/shim" %>
  </head>
  <body>
    <div class="row">
      <%= render "layouts/header_admin" %>
      <div class="col-md-3">
        <%= render "layouts/sidebar_left_admin"%>
      </div>
      <div class="col-md-9">
        <br>
        <h1 class="page-header"><%= yield :page_header %> </h1>
        <div class="row">
        <div class="col-lg-12 person">
          <% flash.each do |message_type, message| %>
          <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
