<head>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to t("name_website"), root_path, id:"logo" %>
      </div>
       <ul class="nav navbar-nav navbar-right">
          <li><%= link_to root_path do %>
            <span class="glyphicon glyphicon-home"></span>
            <%= t "home" %>
            <% end %>
          </li>
          <li><%= link_to root_path do %>
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <%= t "product" %>
            <% end %>
          </li>
          <li><%= link_to root_path do %>
            <span class="glyphicon glyphicon-gift"></span>
            <%= t "sale" %>
            <% end %>
          </li>
          <li><%= link_to contact_path do %>
            <span class="glyphicon glyphicon-phone-alt"></span>
            <%= t "contact" %>
            <% end %>
          </li>
          <li><%= link_to help_path do %>
            <span class="glyphicon glyphicon-question-sign"></span>
            <%= t "help" %>
            <% end %>
          </li>
          <% if loged? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <span class="glyphicon glyphicon-cog"></span>
              <%= t "profile" %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), user_path(current_user) %></li>
              <li><%= link_to t("no_name"), edit_user_path(current_user) %></li>
              <li><%= link_to t("log_out"), logout_path %></li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to new_user_path do %>
            <span class="glyphicon glyphicon-user"></span>
            <%= t "signup" %>
            <% end %>
          </li>
          <li><%= link_to login_path do %>
            <span class="glyphicon glyphicon-log-in"></span>
            <%= t "login" %>
            <% end %>
          </li>
          <% end %>
        </ul>
    </div>
  </nav>
</head>
