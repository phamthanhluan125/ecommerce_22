<% provide :title, t("manage_products") %>
<% provide :page_header, t("show_products") %>
<div class="panel panel-default">
  <div class="panel-heading"><%= t "all_product" %>
  <%= @categ%>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th style="">
          <div class="th-inner sortable"><%= t "name" %></div>
          <div class="fht-cell"></div>
        </th>
        <th style="">
          <div class="th-inner sortable"><%= t "info" %></div>
          <div class="fht-cell"></div>
        </th>
        <th style="">
        <div class="th-inner sortable"><%= t "day_added" %></div>
          <div class="fht-cell"></div>
        </th>
        <th style="">
          <div class="th-inner sortable"><%= t "price" %></div>
          <div class="fht-cell"></div>
        </th>
        <th style="">
          <div class="th-inner sortable"><%= t "function" %></div>
          <div class="fht-cell"></div>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @all_product.each do |p| %>
      <tr>
        <% i = p.id %>
        <td style=""><%= p.name %></td>
        <td style=""><%= p.info.length > 20 ? p.info[0,20]+"......" : p.info  %></td>
        <td style=""><%= l p.created_at, format: :date_month_year_concise %></td>
        <td style=""><%= p.price %></td>
        <td style="">
          <div class="div_function">
            <%= link_to t("delete"), "#", class: "function_icon" %>
            <%= link_to t("edit"), "#", class: "function_icon" %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
